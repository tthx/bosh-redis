#!/bin/bash
<% broker=link('redis_broker_conn') %>

IP="127.0.0.1";
<%- if broker.p('bind') -%>
IP="<%= spec.ip %>";
<%- end -%>
BASE_URI="http://<%= broker.p('user') %>:<%= broker.p('password') %>@${IP}:<%= broker.p('port') %>";

ERR_CATALOG=1;
if [[ "$(curl -s -o /dev/null -I -w "%{http_code}" \
  ${BASE_URI}/v2/catalog)" == "200" ]];
then
  ERR_CATALOG=0;
  echo "$(curl ${BASE_URI}/v2/catalog)";
  echo "Catalog: OK";
else
  echo "Catalog: KO";
fi

ERR_BINDING=1;
if [[ "$(curl -s -o /dev/null -I -w "%{http_code}" \
  ${BASE_URI}/v2/service_instances/:instance_id/service_bindings/:binding_id)" == "200" ]];
then
  ERR_BINDING=0;
  echo "$(curl \
    ${BASE_URI}/v2/service_instances/:instance_id/service_bindings/:binding_id)";
  echo "Binding: OK";
else
  echo "Binding: KO";
fi

ERR=1;
if [[ ${ERR_CATALOG} -eq 0 ]] && [[ ${ERR_BINDING} -eq 0 ]];
then
  ERR=0;
fi

exit ${ERR};